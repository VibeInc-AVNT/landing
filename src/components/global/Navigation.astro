---
import { Icon } from "astro-icon/components";
import { getLangFromUrl, getUrlWithoutLang, useTranslations, useTranslatedPath } from "@i18n/utils";

const isDev = import.meta.env.DEV;

const lang = getLangFromUrl(Astro.url);
const path = getUrlWithoutLang(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

let pages = [
	{
		title: t("nav.features"),
		url: "/#features",
		isAnchor: true,
	},
];

const { pathname } = Astro.url;
---

<header>
	<a href={translatePath("/")} aria-label="Home" class="logo fixed z-50 flex h-[4.5rem] items-center md:h-[5.9rem]">
		<div class="flex items-center">
			<span class="logo-wordmark font-display text-2xl font-black tracking-tight md:text-3xl text-gray-900 uppercase">
				<span class="logo-v inline-block bg-vibe-purple text-white px-2.5 py-1 mr-1.5 border-[3px] border-black" style="box-shadow: 4px 4px 0 0 #000;">V</span><span class="logo-ibe">ibe</span>
			</span>
		</div>
	</a>
	<div data-xdata="{ open: false }" class="navigation fixed right-0 top-0 z-50" data-xbind.class="{'w-full navbar-open': open}">
		<div class="ml-auto md:max-w-fit" data-xbind.class="{'max-w-3xl': open, 'max-w-[8rem]': !open }">
			<div class="mx-auto w-full">
				<div
					class="nav-container relative mx-auto flex w-full flex-col justify-center overflow-x-hidden border-[3px] border-black bg-white/90 shadow-[5px_5px_0_0_#000] backdrop-blur-xl md:flex-row-reverse">
					<div class="flex flex-row items-center justify-end md:hidden">
						<a class="px-3 py-[0.4rem] pl-4 text-vibe-purple transition-colors hover:text-vibe-purple-600" href="mailto:support@avunite.com" aria-label="Contact Email">
							<Icon class="" name="octicon:mail-16" width="20" data-xbind.class="{'hidden': open}" />
						</a>
						<button
							data-xon.click="open = !open"
							data-xbind.style="{'padding-top': open ? '1rem' : '0.4rem'}"
							aria-label="Open navbar"
							class="inline-flex items-center justify-center px-3 py-[0.4rem] pr-4 text-gray-700 hover:text-vibe-purple focus:outline-none">
							<svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
								<path
									data-xbind.class="{'hidden': open, 'inline-flex': !open }"
									class="inline-flex"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M4 6h16M4 12h16M4 18h16">
								</path>
								<path
									data-xbind.class="{'hidden': !open, 'inline-flex': open }"
									class="hidden"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M6 18L18 6M6 6l12 12">
								</path>
							</svg>
						</button>
					</div>
					<nav data-xbind.class="{'flex': open, 'hidden': !open}" class="hidden flex-grow flex-col justify-center py-12 md:flex md:py-0">
						<ul
							class="flex list-none flex-col items-end justify-center gap-2 px-2 text-center text-3xl md:flex-row md:items-center md:text-sm">
							{
								pages.map((page) => (
									<li data-cursor-hover>
										<a
											href={page.isAnchor ? page.url : translatePath(page.url)}
											class={`nav-link inline-block cursor-pointer px-1 py-[0.33rem]`}>
											<span class="menu-item-container inline-block rounded-lg">
												<span class="menu-item px-3 py-1 font-medium text-gray-600 transition-colors hover:text-vibe-purple">
													{page.title}
												</span>
											</span>
										</a>
									</li>
								))
							}
							<li class="hidden md:block">
								<a
								href="mailto:support@avunite.com"
									class="neo-btn-small ml-2 inline-flex items-center justify-center bg-vibe-purple px-4 py-2 text-sm font-bold text-white transition-all hover:bg-vibe-purple-600">
									{t("nav.getstarted")}
								</a>
							</li>
							<li class="md:hidden">
								<a href={translatePath(path, `${lang === "it" ? "en" : "it"}`)} class="inline-block cursor-pointer px-1 py-[0.33rem]">
									<span class="menu-item-container inline-block">
										<span class="menu-item px-4 py-1 font-medium uppercase text-gray-600 hover:text-vibe-purple">
											{lang === "it" ? "en" : "it"}
										</span>
									</span>
								</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
</header>

<style>
	.navigation {
		mix-blend-mode: normal;
	}
	.navigation.navbar-open {
		mix-blend-mode: normal;
	}
	.navigation,
	.logo {
		padding: 1rem var(--base-padding-x);
	}
	@media (min-width: 768px) {
		.navigation,
		.logo {
			padding: 2rem var(--base-padding-x);
		}
	}

	nav a.active .menu-item,
	nav a:hover .menu-item {
		color: inherit;
	}

	/* Logo styling */
	.logo-wordmark {
		letter-spacing: -0.02em;
	}
	
	.logo-v {
		transition: all 0.2s ease;
		display: inline-block;
		vertical-align: baseline;
	}

	.logo:hover .logo-v {
		transform: translateY(-2px);
		box-shadow: 4px 6px 0 0 #000 !important;
	}
	
	.logo-ibe {
		font-weight: 900;
	}
</style>

<script>
	function init() {
		// Smooth scroll for anchor links
		document.querySelectorAll('.nav-link').forEach(link => {
			link.addEventListener('click', function(e) {
				const href = (this as HTMLAnchorElement).getAttribute('href');
				if (href && href.startsWith('/#')) {
					e.preventDefault();
					const targetId = href.substring(2);
					const target = document.getElementById(targetId);
					if (target) {
						target.scrollIntoView({ behavior: 'smooth' });
					}
				}
			});
		});

		// Nav background on scroll
		const navContainer = document.querySelector('.nav-container') as HTMLElement;
		if (navContainer) {
			window.addEventListener('scroll', () => {
				if (window.scrollY > 100) {
					navContainer.style.boxShadow = '0 4px 6px -1px rgb(0 0 0 / 0.1)';
				} else {
					navContainer.style.boxShadow = '0 1px 2px 0 rgb(0 0 0 / 0.05)';
				}
			});
		}
	}

	document.removeEventListener('DOMContentLoaded', init);
	document.addEventListener('DOMContentLoaded', init);
</script>
