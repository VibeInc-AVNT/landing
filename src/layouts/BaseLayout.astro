---
import BlobCursorFollower from "@/components/global/BlobCursorFollower.astro";
import { AstroSeo, type AstroSeoProps } from "@astrolib/seo";
import BaseHead from "@components/BaseHead.astro";
import BackgroundTexture from "@components/global/BackgroundTexture.astro";
import Footer from "@components/global/Footer.astro";
import Navigation from "@components/global/Navigation.astro";
import WarningBanner from "@components/global/WarningBanner.astro";
import { getLangFromUrl } from "../i18n/utils";

const { pathname } = Astro.url;

type Props = {
	seo?: AstroSeoProps;
};

const { seo: seoProp } = Astro.props;

const lang = getLangFromUrl(Astro.url);

const shareImage = new URL("/images/meta/vibe_share.png", Astro.site).toString();

const defaultSeo: AstroSeoProps = {
	title: "Vibe - Semantic Caching for AI",
	description:
		"The intelligent caching layer that understands meaning. Reduce latency by 40×. Cut costs by 70%. Semantic caching for LLM applications.",
	canonical: "https://vibe.avunite.com",
	openGraph: {
		url: "https://vibe.avunite.com",
		title: "Vibe - Semantic Caching for AI",
		description:
			"The intelligent caching layer that understands meaning. Reduce latency by 40×. Cut costs by 70%. Semantic caching for LLM applications.",
		images: [
			{
				url: shareImage,
				width: 1200,
				height: 630,
				alt: "Vibe - Semantic AI Caching",
				type: "image/png",
			},
		],
		site_name: "Vibe",
	},
	twitter: {
		handle: "@vibecache",
		site: "@vibecache",
		cardType: "summary_large_image",
	},
	additionalMetaTags: [
		{
			name: "publisher",
			content: "Vibe",
		},
		{
			name: "keywords",
			content: "AI caching, semantic cache, LLM optimization, API cost reduction, latency reduction, inference optimization, OpenAI cache, GPT cache",
		},
	],
};

const seo = {
	...defaultSeo,
	...seoProp,
};

function cursorFollowerActive() {
	const paths = ["", "/", "/it/", "/it"];
	return paths.includes(pathname);
}
---

<html lang={lang}>
	<head>
		<BaseHead />
		<AstroSeo {...seo} />
	</head>
	<body class="bg-white transition-colors">
		<Navigation />
		<WarningBanner />
		{cursorFollowerActive() && <BlobCursorFollower />}
		<slot />
		<Footer />
	</body>
</html>
